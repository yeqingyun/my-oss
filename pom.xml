        <profile>
            <id>production</id>
            <properties>
                <db.driver>com.mysql.jdbc.Driver</db.driver>
                <db.url>jdbc:mysql://172.18.0.3:3306/gnif_oss?useUnicode=true&amp;characterEncoding=UTF8</db.url>
                <db.user>root</db.user>
                <db.password>root</db.password>
                <base.path>http://file.gionee.com/</base.path>
                <cas.login.url>http://auth.gionee.com/login</cas.login.url>
                <cas.logout.url>http://auth.gionee.com/logout?redirect=file.gionee.com</cas.logout.url>
                <cas.auth.url>http://auth.gionee.com</cas.auth.url>
                <env.auth>TEST</env.auth>
                <env.gnif>TEST</env.gnif>

                <file.maxUploadSize>314572800</file.maxUploadSize>
                <file.chunk.sizeThreshold>10485760</file.chunk.sizeThreshold>
                <file.chunk.fileSizeMax>52428800</file.chunk.fileSizeMax>
                <file.chunk.tmpPath>/data/nfs/tmp</file.chunk.tmpPath>
                <system.rootPath>/data/nfs/file</system.rootPath>

                <log4j.logger.com.gionee>INFO</log4j.logger.com.gionee>
                <log4j.appender.R.File>../root/oss-logs/oss</log4j.appender.R.File>
            </properties>
        </profile>
    </profiles>
</project>
